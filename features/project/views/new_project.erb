<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout__title"><%= title %></span>
    </div>
  </header>

  <%= erb :"../../partials/navigation" %>

  <main class="mdl-layout__content" style="padding: 40px">
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
      <thead>
        <tr>
          <th>Status</th>
          <th style="width: 300px;">Project Name</th>
        </tr>
      </thead>
      <tbody>
        <% repos.each do |repo| %>
          <tr style="cursor: pointer;">
            <td>ðŸ’š</td>
            <td onclick="document.location = '/projects_erb/add/<%= CGI.escape(repo.full_name) %>';"><%= repo.full_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </main>
</div>
