<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout__title"><%= title %></span>
    </div>
  </header>

  <%= erb :"../../partials/navigation" %>

  <main class="mdl-layout__content" style="padding: 40px">
    <h1><%= title %></h1>
    <a href="/projects/<%= project.id %>/trigger" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
      Trigger Job Now
    </a>

    <br /><br />

    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
      <thead>
        <tr>
          <th>Status</th>
          <th>Build Number</th>
          <th>Triggered</th>
        </tr>
      </thead>
      <tbody>
        <% project.builds.each do |build| %>
          <% url = "/projects/#{project.id}/builds/#{build.id}" %>
          <tr style="cursor: pointer;" onclick="location.href='<%= url %>'">
            <td>
              <% if build.status == "success" %>
                <%= "âœ…" %>
              <% elsif build.status == "pending" %>
                <%= "ðŸŒ•" %>
              <% else %>
                <%= "ðŸš«" %>
              <% end %>
            </td>
            <td style="text-align: center;"><%= build.number %></td>
            <!-- TODO: Use whichever format for the timestamp desired. -->
            <td><%= build.timestamp.strftime("%Y%m%dT%H%M%S%z") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br />



    <a href="/projects/<%= project.id %>/edit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
      Edit Project
    </a>

  </main>
</div>
