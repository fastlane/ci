<!-- Modal display script -->
<script>
  var dialog = document.querySelector('dialog');
  if (dialog) {
    if (!dialog.showModal) dialogPolyfill.registerDialog(dialog);

    <% if message %>
      dialog.showModal();
    <% end %>

    dialog.querySelector('.close').addEventListener('click', function() {
      dialog.close();
    });
  }
</script>
