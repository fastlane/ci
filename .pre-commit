#!/usr/bin/env ruby

ADDED_OR_MODIFIED = /A|AM|M|^M/
OTHER_RUBY_FILES  = %w(Rakefile Gemfile .pre-commit)

changed_files = `git status --porcelain`
                .split(/\n/)
                .select { |file_name_with_status| file_name_with_status =~ ADDED_OR_MODIFIED }
                .map { |file_name_with_status| file_name_with_status.split(" ")[1] }
                .select { |file_name| File.extname(file_name) == ".rb" or OTHER_RUBY_FILES.include?(file_name) }
                .join(" ")

exit(0) if changed_files.empty?

unless system("rubocop #{changed_files}")
  puts("\n\nðŸ’¥ Fix ruby linting errors with `rubocop -a` and stage changed, or bypass hook with `git commit --no-verify`")
  exit($?.exitstatus)
end

unless system("npm run lint")
  puts("\n\nðŸ’¥ Fix js linting errors with `npm run lintfix` and stage changed, or bypass hook with `git commit --no-verify`")
  exit($?.exitstatus)
end

exit(0)

